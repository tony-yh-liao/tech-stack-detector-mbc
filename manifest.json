{
  "manifest_version": 3,
  "name": "Tech Stack Detector",
  "version": "1.0",
  "description": "Detects frameworks, CMS, and libraries on the website you're visiting.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}